{
  "name": "dashboard",
  "description": "Dashboard to Display GitHub Statistics",
  "author": "Jack Plowman <62281988+JackPlowman@users.noreply.github.com>",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.8.0"
  },
  "scripts": {
    "dev": "NEXT_PUBLIC_SITE_URL=http://localhost:3000/github-stats next dev --turbopack",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.mjs",
    "postbuild:local": "NEXT_PUBLIC_SITE_URL=http://localhost:8000 next-sitemap --config next-sitemap.config.mjs",
    "lint": "next lint",
    "test": "jest",
    "test:coverage": "jest --coverage --silent"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.3",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-navigation-menu": "1.2.5",
    "@radix-ui/react-separator": "1.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-tooltip": "1.1.8",
    "@tailwindcss/postcss": "^4.0.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.475.0",
    "marked": "15.0.6",
    "next": "15.1.6",
    "next-sitemap": "4.2.3",
    "octokit": "4.1.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "recharts": "2.15.1",
    "tailwind-merge": "2.6.0",
    "tailwindcss": "4.0.4",
    "tailwindcss-animate": "1.0.7",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "20",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "eslint": "8.57.0",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-react-compiler": "19.0.0-beta-a7bf2bd-20241110",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "resize-observer-polyfill": "1.5.1"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "overrides": {
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2"
  }
}
